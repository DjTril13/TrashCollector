@using System.Web.Mvc

@model TrashCollector.Models.NewCustomerViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Create", "Customers"))

{
<div class="form-group">
    @Html.LabelFor(m => m.Customer.Name)
    @Html.TextBoxFor(m => m.Customer.Name)
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Customer.Address)
    @Html.TextBoxFor(m => m.Customer.Address)
</div>

<div class="form-group">
        @Html.LabelFor(m => m.PickupDayId)
    @Html.DropDownListFor(m => m.Customer.Pickupday, new SelectList(Model.PickupDay, "Id", "Name"),"Select Pickup Day")
</div>
}